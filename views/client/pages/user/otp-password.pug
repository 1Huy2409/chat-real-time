extends ../../layouts/default.pug 
include ../../mixins/alert.pug 

block main 
    +alert-success(2000)
    +alert-error(2000)
    .container.my-5.auth-container
        .row.justify-content-center 
            .col-12
                .text-center.mb-4
                    i.fa.fa-shield(style="font-size: 4rem; color: #667eea;")
                h1(class="text-center") Nhập mã OTP
                p.text-center(style="color: #666; margin-bottom: 30px;") Vui lòng kiểm tra email để lấy mã OTP
                form(
                    action="/auth/password/otp"
                    method="POST"
                )
                    div(class="form-group")
                        label(for="email") 
                            i.fa.fa-envelope(style="margin-right: 8px;")
                            | Email
                        input(
                            type="email"
                            class="form-control"
                            id="email"
                            name="email"
                            value = email
                            readonly
                            style="background: #e9ecef; cursor: not-allowed;"
                        )
                    div(class="form-group")
                        label(for="otp") 
                            i.fa.fa-lock(style="margin-right: 8px;")
                            | Mã OTP
                        input(
                            type="text"
                            class="form-control"
                            id="otp"
                            name="otp"
                            placeholder="Nhập mã OTP (6 số)"
                            maxlength="6"
                            required
                        )
                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-success"
                        ) 
                            i.fa.fa-check(style="margin-right: 8px;")
                            | Xác nhận