extends ../../layouts/default.pug 
include ../../mixins/alert.pug 

block main 
    +alert-success(2000)
    +alert-error(2000)
    .container.my-5.auth-container
        .row.justify-content-center 
            .col-12
                .text-center.mb-4
                    i.fa.fa-refresh(style="font-size: 4rem; color: #667eea;")
                h1(class="text-center") Đổi mật khẩu
                p.text-center(style="color: #666; margin-bottom: 30px;") Tạo mật khẩu mới cho tài khoản của bạn
                form(
                    action="/auth/password/reset"
                    method="POST"
                )
                    div(class="form-group")
                        label(for="password") 
                            i.fa.fa-lock(style="margin-right: 8px;")
                            | Mật khẩu mới
                        input(
                            type="password"
                            class="form-control"
                            id="password"
                            name="password"
                            placeholder="Nhập mật khẩu mới (tối thiểu 6 ký tự)"
                            required
                        )
                    div(class="form-group")
                        label(for="confirmPassword") 
                            i.fa.fa-check-circle(style="margin-right: 8px;")
                            | Xác nhận mật khẩu
                        input(
                            type="password"
                            class="form-control"
                            id="confirmPassword"
                            name="confirmPassword"
                            placeholder="Nhập lại mật khẩu mới"
                            required
                        )
                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-success"
                        ) 
                            i.fa.fa-save(style="margin-right: 8px;")
                            | Cập nhật mật khẩu