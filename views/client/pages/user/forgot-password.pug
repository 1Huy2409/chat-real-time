extends ../../layouts/default.pug 
include ../../mixins/alert.pug 

block main 
    +alert-success(2000)
    +alert-error(2000)
    .container.my-5.auth-container
        .row.justify-content-center 
            .col-12
                .text-center.mb-4
                    i.fa.fa-key(style="font-size: 4rem; color: #667eea;")
                h1(class="text-center") Quên mật khẩu 
                p.text-center(style="color: #666; margin-bottom: 30px;") Nhập email của bạn để nhận mã OTP
                form(
                    action="/auth/password/forgot"
                    method="POST"
                )
                    div(class="form-group")
                        label(for="email") 
                            i.fa.fa-envelope(style="margin-right: 8px;")
                            | Email
                        input(
                            type="email"
                            class="form-control"
                            id="email"
                            name="email"
                            placeholder="Nhập địa chỉ email của bạn"
                            required
                        )
                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-success btn-send-otp"
                        ) 
                            i.fa.fa-paper-plane(style="margin-right: 8px;")
                            | Gửi mã OTP về email