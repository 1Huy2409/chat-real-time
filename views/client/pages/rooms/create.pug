extends ../../layouts/default.pug 
include ../../mixins/box-head.pug 

block main  
  .container.my-3 
    .row    
      .col-12     
        +box-head("✨ Tạo phòng mới")
    .row(create-group)
      .col-12     
        form(
          action="/rooms-chat/create"
          method = "POST"
          style="padding: 20px;"
        ) 
          div(class = "form-group")
            label(for = "title") 
              i.fa.fa-tag(style="margin-right: 8px;")
              | Tên phòng
            input(
              class = "form-control"
              type = "text"
              name = "title"
              id = "title"
              placeholder="Nhập tên phòng chat"
              required
            ) 
          div(class = "form-group")
            label 
              i.fa.fa-users(style="margin-right: 8px;")
              | Thêm thành viên
            .member-list(style="max-height: 300px; overflow-y: auto; padding: 10px; background: #f8f9fa; border-radius: 10px;")
              each friend in friendList 
                div(class="form-check" style="padding: 10px; margin-bottom: 10px; background: white; border-radius: 8px;")
                  input(
                    class = "form-check-input"
                    type = "checkbox"
                    value = friend.user_id
                    name = "usersId"
                    id = `user-${friend.user_id}`                   
                  )  
                  label(
                    class = "form-check-label"
                    for = `user-${friend.user_id}`
                    style="cursor: pointer;"
                  ) 
                    i.fa.fa-user-circle(style="margin-right: 8px; color: #667eea;")
                    | #{friend.infoUser.fullName}
          div(class = "form-group")
            button(
              type = "submit"
            ) 
              i.fa.fa-check-circle(style="margin-right: 8px;")
              | Tạo phòng